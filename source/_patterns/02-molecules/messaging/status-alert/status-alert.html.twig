{% for type, messages in message_list %}
  <div{{ attributes }}>
    <div class="messages--{{ type }}"{% if (type == 'error') or (type == 'warning') %} role="alert" {% else %} role="status" {% endif %}>
    {% if status_headings[type] %}
      <h2 class="visually-hidden">{{ status_headings[type] }}</h2>
    {% endif %}
    {% if messages|length > 1 %}
      <ul>
        {% for message in messages %}
          <li>{{ message }}</li>
        {% endfor %}
      </ul>
    {% else %}
      {{ messages|first }}
    {% endif %}
    </div>
  </div>
{% endfor %}

{#
/**
 * @file
 * Four column layout. This layout does not get used by Drupal, but imitates the layout for docs.
 */
 #}

{% if content %}
  <div{{ attributes }}>
    {% if content.first %}
      <div {{ region_attributes.first }}>
        {{ content.first }}
      </div>
    {% endif %}

    {% if content.second %}
      <div {{ region_attributes.second }}>
        {{ content.second }}
      </div>
    {% endif %}

    {% if content.third %}
      <div {{ region_attributes.third }}>
        {{ content.third }}
      </div>
    {% endif %}

    {% if content.fourth %}
      <div {{ region_attributes.fourth }}>
        {{ content.fourth }}
      </div>
    {% endif %}
  </div>
{% endif %}

{#
/**
 * @file
 * Single column layout. This layout does not get used by Drupal, but imitates the layout for docs.
 */
 #}
 {%
  set classes = [
    'layout',
    'layout--onecol--full'
  ]
 %}
{% if content %}
  <div{{ attributes.addClass(classes) }}>
    <div {{ region_attributes.first.addClass('layout__region', 'layout__region--content') }}>
      {{ content.first }}
    </div>
  </div>
{% endif %}

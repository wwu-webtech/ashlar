#}

<div class="page">
  {% block header %}
    <header class="site-header" role="banner">
      {% block wwu_pre_header %}
        <wwu-pre-header class="black-bg">
          <noscript>
              <a href="#main-content" class="skip-link focusable">
                  <span class="skip-link-text">Skip to Content </span>
                  <span class="material-icons" aria-hidden="true">keyboard_arrow_down</span>
              </a>    

              <wwu-search></wwu-search>
          </noscript>
        </wwu-pre-header> 
      {% endblock %}
      
      {% block top %}        
      {% endblock %}

      {% block wwu_header %}
        {% include "@organisms/headers/wwu-header/wwu-header.html.twig" %}
      {% endblock %}

      {% block main_navigation %}
        {{ page.main_navigation }}
      {% endblock %}

      {% block splash %}
        <div class="splash">
          {{ page.header }}
        </div>
      {% endblock %}
     </header>
  {% endblock %}

  {% block content %}
    {{ page.content }}
  {% endblock %}

  {% block footer %}
    <footer class="page-footer region region--footer" role="contentinfo">
      {% block site_footer %}
        {% include "@organisms/footers/site-footer/site-footer.html.twig" %}
      {% endblock %}
      {% block wwu_footer %}
        {% include "@organisms/footers/wwu-footer/wwu-footer.html.twig" %}
      {% endblock %}
    </footer>
  {% endblock %}

  {% block bottom %}
  {% endblock %}
</div>

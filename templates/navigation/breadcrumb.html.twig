{#
/**
 * @file
 * Theme override for a breadcrumb trail.
 *
 * Available variables:
 * - breadcrumb: Breadcrumb trail items.
 */
#}

{% if breadcrumb %}
  <nav class="breadcrumb" aria-labelledby="system-breadcrumb">
    <h2 id="system-breadcrumb" class="visually-hidden">Breadcrumb</h2>
    <ol>
      {% for item in breadcrumb %} 
        {% if loop.last %}
        <li aria-current="page">{{ item.text }}</li>
        {% else %}
        <li>
          {% if item.url %}
            <a href="{{ item.url }}">{{ item.text }}</a><span class="material-icons" aria-hidden="true">chevron_right</span>
          {% else %}
            {{ item.text }}<span class="material-icons" aria-hidden="true">chevron_right</span>
          {% endif %}
        </li>
        {% endif %} 
      {% endfor %}
    </ol>
  </nav>
{% endif %}